<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://git.gzjunbo.net/static/mybatis/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <!-- defaultModelType="flat" 设置复合主键时不单独为主键创建实体 -->
    <context id="MySql" defaultModelType="flat" targetRuntime="MyBatis3">
        <property name="javaFileEncoding" value="UTF-8"/>
        <!-- 生成的POJO实现java.io.Serializable接口 -->
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>
        <!--注释-->
        <commentGenerator>
            <!-- 将数据库中表的字段描述信息添加到注释 -->
            <property name="addRemarkComments" value="true"/>
            <!-- 注释里添加日期 -->
            <property name="suppressDate" value="false"/>
        </commentGenerator>
        <jdbcConnection
                driverClass="com.mysql.jdbc.Driver"
                connectionURL="jdbc:mysql://localhost:3306/shop"
                userId="root"
                password="root">
        </jdbcConnection>
        <!-- 生成POJO对象 -->
        <javaModelGenerator targetPackage="com.huaruan.shop.entity" targetProject="src/main/java">
            <!-- 是否允许子包，即targetPackage.schemaName.tableName -->
            <property name="enableSubPackages" value="true"/>
            <!-- 是否对model添加 构造函数 -->
            <property name="constructorBased" value="false"/>
            <!-- 是否对类CHAR类型的列的数据进行trim操作 -->
            <property name="trimStrings" value="true"/>
            <!-- 建立的Model对象是否 不可改变  即生成的Model对象不会有 setter方法，只有构造方法 -->
            <property name="immutable" value="false"/>
        </javaModelGenerator>

        <!--JAVA BO 生成配置，不开启时，则不自动生成-->
        <!--<javaBOGenerator targetPackage="com.huaruan.shop.bo" targetProject="src/main/java"/>-->

        <!-- 生成mapper xml文件-->
        <sqlMapGenerator targetPackage="mappers" targetProject="src/main/resources"></sqlMapGenerator>
        <!-- 生成mapper xml对应dao接口-->
        <javaClientGenerator targetPackage="com.huaruan.shop.dao" targetProject="src/main/java"
                             type="MIXEDMAPPER">
            <!-- 在targetPackage的基础上，根据数据库的schema再生成一层package，最终生成的类放在这个package下，默认为false -->
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>


        <table tableName="comment" domainObjectName="CommentDO" mapperName="CommentMapper">
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
            <columnOverride column="status" javaType="com.junbo.shortlink.model.LinkStatusEnum"></columnOverride>
        </table>
        <table tableName="conversation" domainObjectName="ConversationDO" mapperName="ConversationMapper">
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
        </table>
        <table tableName="order" domainObjectName="OrderDO" mapperName="OrderMapper">
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
        </table>
        <table tableName="pic" domainObjectName="PicDO" mapperName="PicMapper">
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
        </table>
        <table tableName="productinfo" domainObjectName="ProductInfoDO" mapperName="ProductInfoMapper">
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
        </table>
        <table tableName="productype" domainObjectName="ProductypeDO" mapperName="ProductypeMapper">
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
        </table>
        <table tableName="userinfo" domainObjectName="UserInfoDO" mapperName="UserInfoMapper">
            <generatedKey column="id" sqlStatement="MySql" identity="true"/>
        </table>
    </context>
</generatorConfiguration>
